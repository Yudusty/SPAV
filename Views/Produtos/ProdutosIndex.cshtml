    <!DOCTYPE html>
    <html>
    <head>
        <title>Página de Produtos</title>
    
        <style>
            /* Estilos para a página */
            body {
                font-family: Arial, sans-serif;
                background-color: #010101cf;
                margin: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 40vh;
            }
    
            header {
            background-color: rgb(116, 116, 20);
            padding: 10px 0;
            }
    
            .barra {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center; /* Centraliza os itens */
            }
    
            .barra {
            text-decoration: none;
            color: #ffffff;
            padding: 20px 900px; /* Espaçamento interno entre o texto e a borda do link */
            }
    
            .container {
            background-color: #000000d6;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            text-align: center; 
            }
    
            .form{
            display: flex;
            flex-direction: column;
            background-color: #ffffff;
            border-radius: 0px;
            padding: 30px;
            box-shadow: 10px 10px 40px rgb(0, 0, 0);
            gap: 5px;
            text-align: center;
            overflow-y: auto;
            }
    
            h3 {
            margin-top: -20px;
            font-size: 30px;
            }
    
            table {
                width: 20%;
                border-collapse: collapse;
                margin-bottom: 10px;
            }
    
            th, td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: center;
                font-size: 20px;
            }
    
            th {
                background-color: #f2f2f2;
            }
    
            .actions {
                margin-bottom: 20px;
                text-align: center;
            }
    
            .btn {
                display: inline-block;
                padding: 8px 16px;
                text-decoration: none;
                color: #fff;
                border-radius: 4px;
                transition: background-color 0.3s;
                margin-left: 10px;
            }
    
            .btn-primary {
                background-color: #007bff;
                border: 1px solid #007bff;
            }
    
            .btn-primary:hover {
                background-color: #0056b3;
            }
    
            .btn-danger {
                background-color: #dc3545;
                border: 1px solid #dc3545;
            }
    
            .btn-danger:hover {
                background-color: #c82333;
            }
    
            .pedido{
            background-color: #007bff;
            color: #ffffff;
            border: none;
            padding: 10px 30px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            box-shadow: 10px 10px 40px rgba(47, 45, 45, 0.4);
            }
    
            .pedido:hover{
                background-color: #0056b3;
            }
    
        </style>
    
    </head>
    
    <body class="container">
    
    <header>
        <h3 class="barra">Produtos</h3>
    </header>
    
        <div class="form">

        <h1>Seus Produtos</h1>
    
        <div id="tabelaPed" class="tabcontent">
            <table>
                <thead>
                    <tr>
    
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Quantidade</th>
                        <th>Valor</th>
                        <th>Id da Empresa</th>
                        <th colspan="2">&nbsp;</th>
    
                    </tr>
                </thead>
                <tbody>

                    @foreach(var produtos in Model)
                {
                    <tr>
    
                        <td>@produtos.Nome</td>
                        <td>@produtos.Descricao</td>
                        <td>@produtos.Qtd</td>
                        <td>@produtos.Valor</td>
                        <td>@produtos.IdEmpresa</td>
                        <td><a href="/produtos/produtosdelete/@produtos.IdProduto">Apagar</a></td>
                        <td><a href="/produtos/produtosupdate/@produtos.IdProduto">Atualizar</a></td>
    
                    </tr>
                }
                </tbody>
            </table>
    
            <div class="actions">
                <a href="/produtos/produtoscreate"><button class="btn btn-primary">Criar</button></a>  
    
                <b>
    
                <a href="/menu/indexempresa"><button class="btn btn-danger">Voltar</button></a>
    
                </b>
            </div>
        </div>
        </div>
    </body> 
    </html>